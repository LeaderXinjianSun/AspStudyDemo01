@model HomeDetailsViewModel
@{
    ViewBag.Title = "学生详情列表页";
    
}


<div class="card-deck">
    @foreach (var student in Model.Students)
    {
        var photoPath = "~/images/" + (student.PhotoPath??"狂铁.jpg");
    <div class="card m-3">
        <div class="card-header">
            <h3>@student.Name</h3>
        </div>
        <img class="card-img-top imagesThumbnail" src="@photoPath" asp-append-version="true" />
        <div class="card-footer text-center">

            <a asp-controller="home" asp-action="details" asp-route-id="@student.Id" class="btn btn-primary">查看</a>

            @*<a href="/home/details/@student.Id" class="btn btn-primary">查看</a>*@

            <a href="#" class="btn btn-primary">编辑</a>
            <a href="#" class="btn btn-danger">删除</a>
        </div>
    </div>
    }
</div>

